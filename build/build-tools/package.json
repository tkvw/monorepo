{
  "name": "@tkvw/build-tools",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "Dennie de Lange",
  "type": "module",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "default": "./lib/cjs/index.js"
    },
    "./api/*": {
      "import": "./lib/esm/api/*.js",
      "default": "./lib/cjs/api/*.js"
    },
    "./script": {
      "import": "./lib/esm/script/index.js",
      "default": "./lib/cjs/script/index.js"
    },
    "./script/*": {
      "import": "./lib/esm/script/*.js",
      "default": "./lib/cjs/script/*.js"
    },
    "./script/api/*": {
      "import": "./lib/esm/script/api/*.js",
      "default": "./lib/cjs/script/api/*.js"
    }
  },
  "types": "index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "lib/types/*"
      ],
      "api/*": [
        "lib/types/api/*"
      ],
      "script": [
        "lib/types/script/index.d.ts"
      ],
      "script/api/*": [
        "lib/types/script/api/*"
      ],
      "script/*": [
        "lib/types/script/*"
      ]
    }
  },
  "scripts": {
    "build": "heft build --clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "heft build --watch"
  },
  "dependencies": {
    "@microsoft/rush-lib": "~5.57.1",
    "@tkvw/api": "workspace:*",
    "npm-check-updates": "~12.0.3",
    "sort-package-json": "~1.53.1",
    "type-fest": "~2.8.0"
  },
  "devDependencies": {
    "@tkvw/eslint-config": "workspace:*",
    "@tkvw/heft-node-rig": "workspace:*",
    "eslint": "~8.4.1"
  }
}