{
  "name": "@tkvw/vscode-command-vars",
	"displayName": "Variables",
	"description": "Useful command variables for use in launch.json and task.json",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:folders.packageJson",
		"onCommand:folders.tsconfig",
		"onCommand:folders.git",
		"onCommand:folders.rush",
		"onCommand:folders.eslint"
	],
	"main": "./lib/extension.js",
	"scripts": {
		"build": "heft build --clean",
		"watch": "heft build --watch",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./lib/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"@vscode/test-electron": "^1.6.2",
		"@types/heft-jest": "~1.0.2",
    	"@tkvw/eslint-config": "workspace:*",
		"@tkvw/heft-node-rig": "workspace:*"
	}
}
